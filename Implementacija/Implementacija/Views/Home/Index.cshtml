@using Implementacija.Services
@model IEnumerable<Implementacija.Models.Koncert>
@inject IKoncertManager koncertManager
@{
    ViewData["Title"] = "Home Page";
    var concerts = await koncertManager.GetAll();
    var recommended = koncertManager.GetRecommended();
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        h2 {
            text-align: start;
        }

        .image-container {
            height: 25em;
            overflow: hidden;
        }

        img {
            width: 100%;
        }

        .description {
            margin-top: 3%;
            color: darkgray;
            font-size: 1.5em;
        }

            .description b {
                font-weight: bold;
            }

        table {
            margin-top: 2%;
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid lightgray;
        }

        th {
            background-color: #f2f2f2;
        }

        a {
            text-decoration: none;
            color: #007bff;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
<br />
    <h2>Aktuelni koncerti</h2>
    <table>
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Izvođač</th>
            <th>Žanr</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in concerts)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.naziv)</td>
                <td>@Html.DisplayFor(modelItem => item.izvodjac)</td>
                <td>@Html.DisplayFor(modelItem => item.zanr)</td>
                <td>
                    <a class="details-link" asp-controller="Koncert" asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
    <h2>Preporučeni koncerti</h2>
    <table>
        <thead>
            <tr>
                <th>Naziv</th>
                <th>Izvođač</th>
                <th>Žanr</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in recommended)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.naziv)</td>
                    <td>@Html.DisplayFor(modelItem => item.izvodjac)</td>
                    <td>@Html.DisplayFor(modelItem => item.zanr)</td>
                    <td>
                        <a class="details-link" asp-controller="Koncert" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
